#include <stdio.h>
#include <stdlib.h>
#include "General.h"
#include "User.h"

int main(void) {
	setbuf(stdout, NULL);
	User userList[MAX_USERS];

	int option;

	User_initializeUsers(userList, MAX_USERS);

	printMessage("BIENVENIDO A NUESTRO PROGRAMA", 2);

	do {
		utn_getNumeroWith("1)Ingresar\n2)Registrarse\n\n0)Salir\n",
				"Ha habido un error", 0, 3, &option);
		switch(option){
		case 1:
			break;
		case 2:
			if(User_Membership(userList, MAX_USERS) == 0) {
				printMessage("¡Usuario creado con exito!");
			}
			break;
		case 0:
			printMessage("¡Gracias por usar nuestro programa!", 2);
			break;
		default:
			printMessage("Por favor, ingrese un numero del 0 al 2.", 2);
			break;
		}
	} while (option != 0);
	return EXIT_SUCCESS;
}
